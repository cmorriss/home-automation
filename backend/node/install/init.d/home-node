#! /bin/sh
### BEGIN INIT INFO
# Provides:          home-automation-node
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     4 5
# Default-Stop:      0 1 2 3 6
# Short-Description: Starts the home automation node daemon.
# Description:       Starts the home automation node daemon.
### END INIT INFO

. /lib/lsb/init-functions

export PATH="${PATH:+$PATH:}/usr/sbin:/sbin"
DAEMON=/home/daddy/home-automation-node/bin/home-automation-node
LOGFILE=home/daddy/home-automation-node.log
PIDFILE=/run/home-automation-node.pid

case "$1" in
  start)
	log_daemon_msg "Starting home-automation-node service" "home-automation-node" || true
	if start-stop-daemon --start --quiet --oknodo --background --make-pidfile --pidfile $PIDFILE --startas /bin/bash -- -c "exec $DAEMON > $LOGFILE 2>&1"; then
	    log_end_msg 0 || true
	else
	    log_end_msg 1 || true
	fi
	;;
  stop)
	log_daemon_msg "Stopping home-automation-node service" "home-automation-node" || true
	if start-stop-daemon --stop --quiet --oknodo --pidfile $PIDFILE; then
	    log_end_msg 0 || true
	else
	    log_end_msg 1 || true
	fi
	;;

  restart)
	log_daemon_msg "Restarting home-automation-node service" "home-automation-node" || true
	start-stop-daemon --stop --quiet --oknodo --retry 30 --pidfile $PIDFILE
	if start-stop-daemon --start --quiet --oknodo --background --make-pidfile --pidfile $PIDFILE --startas /bin/bash -- -c "exec $DAEMON > $LOGFILE 2>&1"; then
	    log_end_msg 0 || true
	else
	    log_end_msg 1 || true
	fi
	;;

  status)
	status_of_proc -p $PIDFILE $DAEMON home-automation-node && exit 0 || exit $?
	;;

  *)
	log_action_msg "Usage: /etc/init.d/home-automation-node {start|stop|restart|status}" || true
	exit 1
esac

exit 0
